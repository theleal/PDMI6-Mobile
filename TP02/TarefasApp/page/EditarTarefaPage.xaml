<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TarefasApp.page.EditarTarefaPage"
             Title="EditarTarefaPage">


    <!--//Luiz Gustavo Leal Cortez - CB3015386 
        //Rodrigo Rebelo - CB3016871-->

    <StackLayout Padding="15">
        <Label Text="Título:"/>
        <Entry x:Name="TituloEntry" Placeholder="Título da tarefa"/>

        <Label Text="Descrição:" Margin="0,10,0,0"/>
        <Editor x:Name="DescricaoEditor" Placeholder="Descrição da tarefa"/>

        <Button Text="Salvar" Clicked="OnSalvarClicked" Margin="0,20,0,0"/>
        <Button Text="Excluir" Clicked="OnExcluirClicked" Margin="0,10,0,0" TextColor="White" BackgroundColor="Red"/>
    </StackLayout>

</ContentPage>
